{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "üìö Abrir Documentaci√≥n Principal",
      "type": "shell",
      "command": "code",
      "args": ["./_docs/README.md"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üîß Git: Status Completo",
      "type": "shell",
      "command": "git",
      "args": ["status", "--porcelain", "-b"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üìù Git: Commit con Conventional Commits",
      "type": "shell",
      "command": "git",
      "args": ["commit", "-m", "${input:commitMessage}"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üåø Git: Crear Nueva Branch",
      "type": "shell",
      "command": "git",
      "args": ["checkout", "-b", "${input:branchName}"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üöÄ Git: Push a Origin",
      "type": "shell",
      "command": "git",
      "args": ["push", "origin", "HEAD"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üìä Generar Reporte del Bootcamp",
      "type": "shell",
      "command": "tree",
      "args": ["-d", "-L", "3", "_docs/"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üßπ Limpiar Logs de Scripts",
      "type": "shell",
      "command": "rm",
      "args": ["-f", "scripts/*.log"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "commitMessage",
      "description": "Mensaje del commit (usa prefijos: feat:, fix:, docs:, style:, refactor:, test:, chore:)",
      "default": "docs: actualizar documentaci√≥n",
      "type": "promptString"
    },
    {
      "id": "branchName",
      "description": "Nombre de la nueva branch (ej: feature/nueva-funcionalidad, fix/correccion-bug)",
      "default": "feature/",
      "type": "promptString"
    }
  ]
}
